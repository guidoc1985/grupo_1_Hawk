<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/header') %>
        <br>
        
        <span class="span-ing-prod">
            <div class="ingresar-productos">
                <form class="form-tabla" action="/users" method="POST" class="form-login">
                
                    <h2 class="titulo-registro">Ingresá!</h2>
                    <!-- nombre, codigo, precio, material, categoría, medida, origen, descripción, -->
                    <br>
                    <label for="name"></label>
                    <input type="text" name="firstName" id="firstName" placeholder="Nombre de Usuario" value="<%=  locals.errores?.firstName?.value %>" >
                    <div class="error">
                        <% if(locals.errores && errores.firstName){ %>
                          <%= errores.firstName.msg %>
                        <% } %>
                      </div>
                    <br>
                    <label for="apellido"></label>
                    <input type="text" name="lastName" id="lastName" placeholder="Apellido de Usuario" value="<%=  locals.errores?.lastName?.value %>">
                    <div class="error">
                        <% if(locals.errores && errores.lastName){ %>
                          <%= errores.lastName.msg %>
                        <% } %>
                      </div>
                    <br>
                    <label for="email"></label>
                    <input type="text" name="email" id="email" placeholder="email" value="<%=  locals.errores?.email?.value %>">
                    <div class="error">
                        <% if(locals.errores && errores.email){ %>
                          <%= errores.email.msg %>
                        <% } %>
                      </div>
                    <br>
                    <label for="password"></label>
                    <input type="text" name="password" id="password" placeholder="*******" value="<%=  locals.errores?.password?.value %>">
                    <div class="error">
                        <% if(locals.errores && errores.password){ %>
                          <%= errores.password.msg %>
                        <% } %>
                      </div>
                    <br>
                   
                    <input type="submit" value="Ingresar">Ingresar</button>
                    <!-- <img src="images/esqueleto-bailando-esqueleto.gif" alt="gif" class="gif-esqueleto"> -->
                </form>
            </div>
        </span>
        <br>
        <%- include('./partials/footer') %>
</body>

</html>