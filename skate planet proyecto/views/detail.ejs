<!DOCTYPE html>
<html>
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
            </br>
            <main>
                
                <h3>Detalle de producto :
                    <%= producto.name %>
                </h3>
        
                <div class="precio-descuento">

                </div>
                <h4 class="descripcion">
                    <%= producto.description %>
                </h4>
                </div>

                <section class="tablas">
                    <article>
                        <div class="tablaaguila">
                            <img src="/images/products/<%= producto.image %>" alt= "tablaaguila" class="product_img2">
                        </div>
                        <p class="precio">Precio: 
                            $<%= producto.price %>
                        </p>
                        </br>
                        <div class="cantidadBoton">
                            <p class="cantidad">Cantidad: </p>
                            <form action="/" method="POST">
                                <input class="qty" type="qty" name="qty" placeholder="Cantidad">
                            </form>
                        </div>
                        <br>
                        <br>
                        <br>
                        <div class="botonesvarioss">
                        <button class="agregarAlCarrito">Add to cart</button>
                        <br>
                        <div class="botoneditar">
                        <a href="/products/edit/<%= producto.id %>" class="agregarAlCarrito" style="text-decoration: none;" >Editar producto</a>
                        <br></div>
                        <br>
                    </div>
                    <br>
                    <div class="botonEliminar">
						<form action="/products/delete/<%= producto.id %>?_method=DELETE" method="POST" style="display: flex">
							<button type="submit" class="agregarAlCarrito">Eliminar</button>
                            </form>
                    </div>

                       
                    </article>

                </section>
                
                </br>
            </main>

            <%- include('./partials/footer') %>
         </html>