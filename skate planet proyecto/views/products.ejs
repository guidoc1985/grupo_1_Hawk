<!DOCTYPE html>
<html>
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
    <br>
    <br>
       <h3>NUESTROS PRODUCTOS</h3>
            <main>
                <% for(let producto of productos ) { %>

                    <section class="tablas">
                       
                        <article>
                            <a href="/products/detail/<%= producto.id %>">
                            <div class="tablaaguila">
                                <img src="/images/products/<%= producto.image %>" alt="imagen de producto" class="product_img2">
                            </div>
                            <div class="precio-descuento3">
                                <h4 class="description" style="text-decoration: none;"><%= producto.name %></h4>
                                </div>
                           
                            <div class="precio-descuento2">
                            <h4 class="description" style="text-decoration: none;"><%= producto.description %></h4>
                            </div>
                            <div class="precio-descuento">
                                <p class="price" style="text-decoration: none;" >$<%= producto.price %></p>
                            </div>
                            
                        </a>
                            <br>
                        </article>
                    </section>
                        <% } %>
                    </main>
                <section>
                    <div class="youtube">
                        <h3>Seguinos en YouTube</h3>
                    </div>
                    </br>
                    <div class="video">

                        <iframe width="560" height="315" src="https://www.youtube.com/embed/2bh3__d9ewk"
                            title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                    </div>

                </section>
                </br>

           
    </body>
    <%- include('./partials/footer') %>

</html>